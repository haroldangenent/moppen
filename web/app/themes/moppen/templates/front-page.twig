{% extends 'base.twig' %}

{% block content %}
  <h1>
    {{ post.title }}
  </h1>

  {{ post.content }}

  {% include 'partials/categories.twig' %}

  {% if newestJokes is not empty %}
    <h2>Nieuwste moppen</h2>

    <div class="jokes-list">
        {% for post in newestJokes %}
            {% include 'partials/loop-joke.twig' %}
        {% endfor %}
    </div>

    {% include 'partials/view-all-button.twig' %}
  {% endif %}

  {% if bestJokes is not empty %}
    <h2>Beste moppen</h2>

    <div class="jokes-list">
        {% for post in bestJokes %}
            {% include 'partials/loop-joke.twig' %}
        {% endfor %}
    </div>

    {% include 'partials/view-all-button.twig' %}
  {% endif %}

{% endblock %}
